<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:id="@+id/file_pick_fragment_layout">

    <TextView
        android:id="@+id/file_pick_fragment_text"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_weight="2"
        android:hint="@string/file_choose_text_placeholder"
        android:fontFamily="@font/ubuntu"
        android:autoSizeMaxTextSize="22sp"
        android:autoSizeMinTextSize="20sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"
        android:background="@drawable/textbox_border">

    </TextView>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_weight="1"
        android:background="@drawable/ripple"
        android:clickable="true"
        android:elevation="25dp"
        android:fontFamily="@font/ubuntu"
        android:gravity="center"
        android:onClick="ChooseFile"
        android:text="@string/file_choose_button"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp">

    </Button>


</LinearLayout>